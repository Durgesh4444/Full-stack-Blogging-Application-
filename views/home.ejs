<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
</head>

<body>
   
    <%- include('./partials/nav') %>
     <!-- ----------------------------------------------- -->
     <div id="carouselExampleIndicators" class=" carousel slide mb-5" data-bs-ride="carousel">
        <div class="carousel-indicators">
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="/images/a.jpg" class="d-block w-100" style="height: 30rem" alt="...">
            <div class="carousel-caption d-none d-md-block">
              <h1>Embark on a Journey</h1>
              <p>Chronicles of Adventures, Discoveries, and Cultural Escapades Around the Globe!</p>
            </div>
          </div>
          <div class="carousel-item">
            <img src="/images/bc.jpg" class="d-block w-100" style="height: 30rem" alt="...">
            <div class="carousel-caption d-none d-md-block">
              <h1>Into the Wilderness</h1>
              <p>Exploring the Wonders of Nature and Celebrating the Beauty of the Great Outdoors!</p>
            </div>
          </div>
          <div class="carousel-item">
            <img src="/images/dc.jpg" class="d-block w-100" style="height: 30rem" alt="...">
            <div class="carousel-caption d-none d-md-block">
              <h1>Blossoming Adventures</h1>
              <p>Unveiling the Florigen Wonders of the World with Every Travel Tale!"</p>
            </div>
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>

    <!-- -------------------------------------------- -->
        <!-- <%= JSON.stringify(user) %> -->
        
        <div class="container mt-3">
          <p>All Posts</p>
          <main>
            <% blogs.forEach(blog => { %>
           <div id="container">
        <figure >
            <img src="<%= blog.coverImage %>"
                alt="">
        </figure>
        <div id="info">


            <div id="info1">
                <img src="/images/user.png" alt="" width="35px">
                <div><%= blog.createdBy.fullName %></div>
            </div>
            <h1 id="title"> <%= blog.title %></h1>
            <div id="info2">
              <%= blog.description.slice(0, 160) +"........" %>
            </div>
            <hr id="line">
            <div id="info3">
                <div>
                <span><%= (comments.filter(item => (item.blogId.toString()== blog._id.toString()))).length %></span> <span style="margin-left: 5px;"> Comments</span>

                </div>
                <a href="/blog/<%= blog._id %>" class="btn btn-secondary">View</a>
               
            </div>
        </div>




    </div>
            <% }) %>
  </main>
        </div>

        <%- include('./partials/script') %>

</body>

</html>